# archlinux: color ls by default
alias ls='ls --color=auto'

# make bash navigation easier
alias ..="cd .."

# gitimmersion: useful git aliases
alias gs='git status '
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gd='git diff'
alias go='git checkout'

# videodownloader (for vimeo videos)
alias vimeo-dl='videodownloader -p Vimeo'
